@model IEnumerable<LanchesMC.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos Por Período";
}

<h3 class="marginTop">@ViewData["Title"]</h3>

<nav class="navbar navbar-light" style="background-color: #e3f2fd;">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Data Inicial</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Data Final</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-success">Filtrar</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total de Pedidos = @Model.Count()</h3>
        <h3 class="panel-title">Total de Lanches nos Pedidos = @Model.Sum(obj => obj.TotalItensPedido).ToString()</h3>
        <h3 class="panel-title">Valor Total dos Pedidos = @Model.Sum(obj => obj.PedidoTotal).ToString("c")</h3>
    </div>
    <div class="panel-body">
        <div class="row" style="font-weight:bold;">
            <div class="col-xs-1">
                Pedido
            </div>
            <div class="col-xs-2">
                @Html.DisplayNameFor(model => model.Nome)
            </div>
            <div class="col-xs-3">
                @Html.DisplayNameFor(model => model.Email)
            </div>
            <div class="col-xs-3">
                @Html.DisplayNameFor(model => model.Telefone)
            </div>
            <div class="col-xs-1">
                Total
            </div>
            <div class="col-xs-1">
                Itens
            </div>
            <div class="col-xs-1">
                Entrega
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-xs-1">
                    @Html.DisplayFor(modelItem => item.PedidoId)
                </div>
                <div class="col-xs-2">
                    @Html.DisplayFor(modelItem => item.Nome)
                </div>
                <div class="col-xs-3">
                    @Html.DisplayFor(modelItem => item.Email)
                </div>
                <div class="col-xs-3">
                    @Html.DisplayFor(modelItem => item.Telefone)
                </div>
                <div class="col-xs-1">
                    @Html.DisplayFor(modelItem => item.PedidoTotal)
                </div>
                <div class="col-xs-1">
                    @Html.DisplayFor(modelItem => item.TotalItensPedido)
                </div>
                <div class="col-xs-1">
                    @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
                </div>
            </div>
        }
    </div>
</div>
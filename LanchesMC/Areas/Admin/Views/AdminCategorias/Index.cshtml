@model IEnumerable<LanchesMC.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h3 class="marginTop">Categorias</h3>

<p>
    <a asp-action="Create">Criar categoria</a>
</p>
<div class="row" style="font-weight:bold;">
    <div class="col-xs-3">
        @Html.DisplayNameFor(model => model.CategoriaNome)
    </div>
    <div class="col-xs-6">
        @Html.DisplayNameFor(model => model.Descricao)
    </div>
    <div class="col-xs-3">
        &nbsp;
    </div>
</div>
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-xs-3">
            @Html.DisplayFor(modelItem => item.CategoriaNome)
        </div>
        <div class="col-xs-6">
            @Html.DisplayFor(modelItem => item.Descricao)
        </div>
        <div class="col-xs-3">
            <a asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a> |
            <a asp-action="Details" asp-route-id="@item.CategoriaId">Detalhes</a> |
            <a asp-action="Delete" asp-route-id="@item.CategoriaId">Excluir</a>
        </div>
    </div>
}
